<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <size android:height="100dp"/>
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="-140dp"
        android:right="-140dp"
        android:top="-250dp"><!--Change this to handle curve-->
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="@color/_gray"
                android:centerColor="@color/_gray"
                android:endColor="@color/_gray" />
        </shape>
    </item>
</layer-list>