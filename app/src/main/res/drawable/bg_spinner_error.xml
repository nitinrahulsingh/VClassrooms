<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle" android:padding="@dimen/_5sdp">
                    <solid android:color="#FFFF"/>
                    <stroke android:color="@color/red"
                        android:width="1dp"/>
                    <corners
                        android:bottomRightRadius="@dimen/_6sdp"
                        android:bottomLeftRadius="@dimen/_6sdp"
                        android:topLeftRadius="@dimen/_6sdp"
                        android:topRightRadius="@dimen/_6sdp"/>
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_down" />

            </item>

        </layer-list>

    </item>

</selector>