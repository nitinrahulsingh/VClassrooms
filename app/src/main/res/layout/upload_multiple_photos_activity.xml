<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_marginTop="@dimen/_8sdp"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gallery_img"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_attach"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp" />
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/line1_view"
        android:layout_below="@+id/tax_relative"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight=".21"
            android:layout_margin="@dimen/_8sdp"
            android:id="@+id/image_recycler"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/imgSelectedCount_tv"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_regular"
                android:textSize="@dimen/_10sdp"
                android:text="@string/selected"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight=".9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <androidx.appcompat.widget.AppCompatButton
                android:gravity="center"
                android:layout_weight="1.1"
                android:layout_marginBottom="@dimen/_8sdp"
                android:visibility="visible"
                android:fontFamily="@font/muli_regular"
                android:layout_centerHorizontal="true"
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:background="@drawable/button_selector_round_color"
                android:layout_height="@dimen/_34sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>