<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_100"
    android:clickable="false"
    app:cardBackgroundColor="@color/gray_100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/gradient_rectangle_dark"
                        android:id="@+id/rel_students"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp">

                        <LinearLayout
                            android:id="@+id/relativeRecyandHearder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/titleRelative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_rectangle_arc"
                                android:padding="@dimen/_5sdp"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/tittle_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:fontFamily="@font/proxima_nova"
                                    android:text="TimeTable"
                                    android:textAlignment="center"
                                    android:textColor="@color/gray_1100"
                                    android:textSize="@dimen/_17sdp" />

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:visibility="visible"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_minus30sdp"
                android:layout_below="@+id/relative1"
                android:id="@+id/parentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/_grey_border_rectangle"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="5dp"
                app:cardMaxElevation="2dp">
            <LinearLayout
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:id="@+id/linear2"
                android:weightSum="6"
                android:paddingStart="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/pink"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/mon_text" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/gray_600"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/tue_text" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/gray_600"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/wed_text" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Th"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/gray_600"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/thur_text" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/gray_600"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/fri_text" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@color/gray_600"
                        android:background="@drawable/pink_circle"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/sat_text" />
                </RelativeLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_below="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dir_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/relativeParentFirst"
                        android:background="@color/gray_100"
                        android:focusableInTouchMode="true"
                        android:layoutAnimation="@anim/_layoutanimation"
                        />


            </LinearLayout>
        </LinearLayout>
    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:fontFamily="@font/proxima_nova"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:orientation="vertical"
        android:padding="@dimen/_30sdp"
        android:drawableTop="@drawable/noresultfound"
        android:text="@string/no_data"
        android:textAlignment="center"
        android:textColor="@color/gray_1100"
        android:textSize="@dimen/_16sdp"
        android:visibility="gone"/>
</RelativeLayout>