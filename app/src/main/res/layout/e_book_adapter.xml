<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/_ripple"
        android:id="@+id/linear_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/relativeTodownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/blue_circle"
            tools:ignore="UselessParent"
            android:layout_marginStart="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                tools:ignore="UselessParent"
                >

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Size"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center" />
                <View
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txtfileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="center"
                    android:background="@color/white"/>
            </LinearLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/txtFileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/gray_1100"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txtCalenDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/calendar"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Category"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/categoryType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/category"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>