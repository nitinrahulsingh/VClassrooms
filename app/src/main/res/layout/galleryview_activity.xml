<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        android:layout_gravity="center"
        android:id="@+id/member_imageViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/no_image"
        />
    <com.vclassrooms.PageIndicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/_25sdp"
        android:padding="@dimen/_8sdp"
        app:fillColor="@color/golden"
        app:pageColor="@color/transparent"
        app:snap="false" />
    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/proxima_nova"
        android:orientation="vertical"
        android:textAlignment="center"
        android:drawableTop="@drawable/noresultfound"
        android:text="@string/no_data"
        android:textColor="@color/gray_1100"
        android:textSize="@dimen/_16sdp"
        android:visibility="gone" />
</RelativeLayout>