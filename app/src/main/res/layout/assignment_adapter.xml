<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/gray_1100"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp">

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/calendar"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Subject"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/subject_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/category"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray_400"/>
                <TextView
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/txtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/gray_1100"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_14sdp" />
                <LinearLayout
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_photo"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardMaxElevation="2dp">

                            <ImageView
                                android:id="@+id/ivPhoto1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:maxHeight="?android:attr/listPreferredItemHeight"
                                android:maxWidth="?android:attr/listPreferredItemHeight"
                                android:scaleType="fitXY"
                                android:visibility="visible" />

                        </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/card_photo2"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="2dp">

                        <ImageView
                            android:id="@+id/ivPhoto2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:maxHeight="?android:attr/listPreferredItemHeight"
                            android:maxWidth="?android:attr/listPreferredItemHeight"
                            android:scaleType="fitXY"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/card_photo3"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="2dp">

                        <ImageView
                            android:id="@+id/ivPhoto3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:maxHeight="?android:attr/listPreferredItemHeight"
                            android:maxWidth="?android:attr/listPreferredItemHeight"
                            android:scaleType="fitXY"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/card_photo4"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="2dp">

                        <ImageView
                            android:id="@+id/ivPhoto4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:maxHeight="?android:attr/listPreferredItemHeight"
                            android:maxWidth="?android:attr/listPreferredItemHeight"
                            android:scaleType="fitXY"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>