<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/_ripple"
        android:id="@+id/linear_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:weightSum="2"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/relativeTodownload"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/icc_play_button"
            tools:ignore="UselessParent"
            android:layout_marginStart="@dimen/_4sdp">


        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/gray_1100"
                    android:textSize="@dimen/_14sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Total Marks"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/tmtx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/total"
                        android:layout_alignParentEnd="false"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/teahertx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Subject"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/subjtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teahertx"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>