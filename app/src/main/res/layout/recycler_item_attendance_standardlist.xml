<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/my_class_relative">

    <ImageView
        android:id="@+id/imgViewClassAttendance"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/blue_circle"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/view"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/imgMarkClassAttendance"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_toRightOf="@id/imgViewClassAttendance"
        android:background="@drawable/blue_circle"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/mark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_toRightOf="@id/imgMarkClassAttendance"
        android:background="@drawable/_grey_border_rectangle"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_6sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:layout_marginEnd="@dimen/_4sdp"
            android:id="@+id/textViewClassName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1" />
<!--        <TextView-->
<!--            android:layout_marginStart="@dimen/_3sdp"-->
<!--            android:id="@+id/textViewTeacher"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:ellipsize="end"-->
<!--            android:maxLines="1" />-->
    </LinearLayout>
</RelativeLayout>