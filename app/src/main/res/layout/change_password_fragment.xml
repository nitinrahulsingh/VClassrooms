<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:id="@+id/relatIveFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rectangle_arc"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/titleChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Change Password"
                    android:textAlignment="center"
                    android:textColor="@color/gray_1100"
                    android:textSize="@dimen/_17sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLytAllEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">
<LinearLayout
    android:id="@+id/linear_tab"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/relparent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/parentImg"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/teacher_grayicon" />

                                <TextView
                                    android:id="@+id/txtParentsChngPass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_toEndOf="@+id/parentImg"
                                    android:fontFamily="@font/proxima_nova"
                                    android:gravity="center_vertical"
                                    android:text="Parent"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_15sdp" />
                            </RelativeLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/relChildt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/childImg"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/teacher_grayicon" />

                                <TextView
                                    android:id="@+id/txtChildChngPass"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_toEndOf="@+id/childImg"
                                    android:fontFamily="@font/proxima_nova"
                                    android:gravity="center_vertical"
                                    android:text="Student"
                                    android:textColor="@color/gray_300"
                                    android:textSize="@dimen/_15sdp" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:id="@+id/viewparent"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:background="@color/btn_color" />

                        <View
                            android:id="@+id/viewchild"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:background="@color/gray_300" />
                    </LinearLayout>
</LinearLayout>


                    <TextView
                        android:id="@+id/txtTittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Parent"
                        android:textColor="@color/gray_1100"
                        android:textSize="@dimen/_20sdp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtUsername"
                            android:editable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableStart="@drawable/user"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova"
                            android:hint="@string/username"
                            android:textColor="@color/gray_1100"
                            android:textColorHint="@color/gray_1100"
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtspinnerHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/proxima_nova"
                        android:text="@string/select_student_to_change_password"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/Linear_spinnerChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtHeader"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/_grey_border_rectangle"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <Spinner
                            android:id="@+id/spinnerChild"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overlapAnchor="false"
                            android:padding="@dimen/_5sdp" />

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_oldPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableStart="@drawable/password"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova"
                            android:hint="Old Password"
                            android:maxLength="30"
                            android:inputType="textWebPassword"
                            android:textColor="@color/gray_1100"
                            android:textColorHint="@color/gray_1100"
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableStart="@drawable/password"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova"
                            android:hint="New Password"
                            android:maxLength="30"
                            android:inputType="textWebPassword"
                            android:textColor="@color/gray_1100"
                            android:textColorHint="@color/gray_1100"
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtConfPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:drawableStart="@drawable/password"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova"
                            android:hint="Confirm Password"
                            android:inputType="textWebPassword"
                            android:textColor="@color/gray_1100"
                            android:textColorHint="@color/gray_1100"
                            android:maxLength="30"
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/button_selector_round_color"
                        android:fontFamily="@font/proxima_nova"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
